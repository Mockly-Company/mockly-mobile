{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "android/app/build/**",
        "ios/build/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook:web": {
      "cache": false,
      "persistent": true
    },
    "storybook:android": {
      "cache": false,
      "persistent": true
    },
    "storybook:ios": {
      "cache": false,
      "persistent": true
    },
    "chromatic": {
      "cache": false
    },
    "android": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": false,
      "env": ["NODE_ENV"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "storybook-generate": {
      "outputs": ["storybook-static/**"],
      "cache": false
    }
  }
}
