{
  "name": "@mockly/design-system",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "react-native": "./src/index.ts",
  "exports": {
    ".": {
      "browser": "./src/index.ts",
      "react-native": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
