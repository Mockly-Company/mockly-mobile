<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
        <!-- 기본 안드로이드 배경 투명 -->
        <!-- <item name="android:windowIsTranslucent">true</item> -->
    </style>

    <!-- Splash Screen Theme using Official API -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <!-- Background color -->
        <item name="windowSplashScreenBackground">@color/bootsplash_background</item>

        <!-- Center icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/bootsplash_logo_anim</item>

        <item name="android:windowSplashScreenIconBackgroundColor">@color/anim</item>

        <item name="android:windowSplashScreenAnimationDuration">1000</item>

        <!-- Icon background (transparent) -->
        <!-- <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item> -->

        <item name="android:windowSplashScreenBrandingImage">@drawable/bootsplash_brand</item>
        
        <!-- Post splash screen theme -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>

    </style>
</resources>
