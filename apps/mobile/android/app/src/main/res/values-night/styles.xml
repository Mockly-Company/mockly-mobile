<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
        <!-- 기본 안드로이드 배경 투명 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <!-- Dark Mode Splash Screen -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <!-- Dark background color -->
        <item name="windowSplashScreenBackground">@color/bootsplash_background_dark</item>

        <!-- White logo for dark mode -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/bootsplash_logo_anim_dark</item>

        <item name="android:windowSplashScreenIconBackgroundColor">@color/anim_dark</item>

        <item name="android:windowSplashScreenAnimationDuration">1000</item>

        <!-- Icon background (transparent) -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Post splash screen theme -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>

        <item name="android:windowSplashScreenBrandingImage">@drawable/bootsplash_brand_dark</item>
    </style>
</resources>
